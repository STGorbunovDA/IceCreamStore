<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IceCreamStore.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IceCreamStore.MAUI"
    xmlns:pages="clr-namespace:IceCreamStore.MAUI.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="IceCreamStore.MAUI">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

    <ShellContent ContentTemplate="{DataTemplate pages:OnboardingPage}" 
                  Shell.FlyoutBehavior="Flyout"/>

    <TabBar>
        <ShellContent
              Title="Home"
              Icon="home"
              ContentTemplate="{DataTemplate pages:HomePage}"
              Route="HomePage" />
        <ShellContent
              Title="Cart"
              Icon="cart"
              ContentTemplate="{DataTemplate pages:CartPage}"
              Route="CartPage" />
        <ShellContent
              Title="Profile"
              Icon="user"
              ContentTemplate="{DataTemplate pages:ProfilePage}"
              Route="ProfilePage" />


    </TabBar>

</Shell>
